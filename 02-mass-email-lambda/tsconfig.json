{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "include": [
    "lambda/**/*.ts"
, "lambda/utils/awsClients.ts"  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}